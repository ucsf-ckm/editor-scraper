{
  "name": "editor-scraper",
  "version": "1.0.0",
  "description": "tool to get retrieve editors of scientific journals.",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "test": "standard --fix",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ucsf-ckm/editor-scraper.git"
  },
  "keywords": [
    "scraping"
  ],
  "author": "Rich Trott <Richard.Trott@ucsf.edu>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ucsf-ckm/editor-scraper/issues"
  },
  "homepage": "https://github.com/ucsf-ckm/editor-scraper#readme",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "puppeteer": "^20.5.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-adblocker": "^2.13.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "robots-txt-parser": "^2.0.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-deb": "^6.1.1",
    "@electron-forge/maker-rpm": "^6.1.1",
    "@electron-forge/maker-squirrel": "^6.1.1",
    "@electron-forge/maker-zip": "^6.1.1",
    "electron": "^25.0.0",
    "standard": "^17.1.0"
  },
  "build": {
    "asar": true,
    "asarUnpack": "node_modules/puppeteer/.local-chromium/**/*"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "editor_scraper"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
